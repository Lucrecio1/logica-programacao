algoritmo "exercicios"
var
   ano_nascimento, ano_act, idade: inteiro
inicio
      escreval("em ano você nasceu? ")
      leia(ano_nascimento)
      escreval("em que ano nos estamos? ")
      leia(ano_act)
      idade <- ano_act - ano_nascimento
      escreval(" tens ", idade," de idade")

fimalgoritmo
